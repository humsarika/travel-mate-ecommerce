<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Product Page</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="style/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css">
    <style>
        body{
            font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;

        }
       nav {
        flex-direction: row;
        justify-content: space-around;
        opacity: 0.85;
        background: #fff;
        display: flex;
        align-items: center;
        padding: 8px 5%;
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        z-index: 1000;
    }


        nav a {
            text-decoration: none;
            margin: 1rem 2rem;
            font-size: 1.6rem;
            color: #000;
        }
        button {
            background-color: #f4a033;
            color: #fff;
            padding: 13px 30px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            width: 64%;
            font-size: 18px;
            }

            button:hover {
            background-color: rgb(220, 142, 25);
            }

        #product-list {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            grid-gap: 20px;
            padding: 60px;

        }

        #product-list .product {
            position: relative;
            overflow: hidden;
            padding: 10px;
            background: #fff;
            border-radius: 3px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            transition: 0.5s;

        }

        #product-list .product .price {
            color: #f84e34;
            font-size: 16px;
            font-weight: 500;
        }

        #product-list .product img {
            width: 100%;
            /* height: 10%; */
            /* object-fit: cover; */
        }

        @media (max-width: 768px) {
            #product-list {
                grid-template-columns: repeat(2, 1fr);
            }
        }

        @media (max-width: 576px) {
            #product-list {
                grid-template-columns: repeat(1, 1fr);
            }

        }

        @media (max-width: 376px) {
            #product-list {
                grid-template-columns: repeat(1, 1fr);
            }

        }

        .size-and-quantity-container {
    display: flex;
    justify-content: space-evenly;
}

.size {
    padding: 15px 15px;
    margin-right: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
    font-size: 18px;
}

.qnty {
    padding: 15px 15px;
    border: 1px solid #ccc;
    border-radius: 5px;
    font-size: 18px;
    width: 30px;
}

.add-to-cart-btn {
      background-color: #f4a033;
    color: white;
    text-transform: uppercase;
    letter-spacing: 1px;
    padding: 15px 35px;
    cursor: pointer;
    transition: all 0.3s ease;
   margin-left: 5px;
    width: 100%;

    
}
.add-to-cart-btn:hover{
    opacity: 0.9;
}

        input {

            background: #e0dede;
            margin: 0;
            padding: 10px;
            border: none;
            border-radius: 5px;
        }
        .footer{
  background:#000;
  padding:30px 0px;
  text-align:center;
  }
  
  .footer .row{
  width:100%;
  margin:1% 0%;
  padding:0.6% 0%;
  color:gray;
  font-size:1em;
  }
  
  .footer .row a{
  text-decoration:none;
  color:gray;
  transition:0.5s;
  }
  
  .footer .row a:hover{
  color:#fff;
  }
  
  .footer .row ul{
  width:100%;
  }
  
  .footer .row ul li{
  display:inline-block;
  margin:0px 30px;
  }
  
  .footer .row a i{
  font-size:2em;
  margin:0% 1%;
  }

    </style>
</head>

<body>
    {{>navbar}}
    {{>categoriesnav}}

    <div id="product-list" style="margin-top: 150px;">
        {{#each products}}
        <div class="product">
            <a href="/product/{{_id}}">
                <img src="{{imageUrl}}" alt="{{name}}" width="200">
            </a>

            <h2>{{name}}</h2>
            <p class="price">Price: INR {{price}}</p>
            {{!-- <p>Description: {{description}}</p> --}}
            <div class="size-and-quantity-container">

                <div><select class="size" id="size_{{_id}}">
                        <option value="small">S</option>
                        <option value="medium">M</option>
                        <option value="large">L</option>
                    </select>
                </div>
                <div>
                    <input class="qnty" type="number" id="quantity_{{_id}}" value="1" min="1" max="10">
                </div>
                <div>
                    <form class="addToCartForm" action="/add-to-cart" method="POST">


                        <!-- Use unique IDs within each form -->
                        <input type="hidden" name="userId" value="{{userId._id}}">
                        <input type="hidden" name="productName" value="{{name}}">
                        <input type="hidden" name="productId" value="{{_id}}">
                        <input type="hidden" name="productImageUrl" value="{{imageUrl}}">
                        <input type="hidden" name="quantity" id="quantity_{{_id}}" value="1" min="1" max="5">
                        <input type="hidden" name="size" id="size_{{_id}}" value="small">
                        <input type="hidden" name="price" id="price_{{_id}}" value="{{price}}">

                        <button type="button" class="add-to-cart-btn">Add to Cart</button>
                    </form>
                </div>
            </div>


            <!-- Add a form for each product -->

        </div>
        {{/each}}
    </div>


    {{>footer}}



    <script>
        document.addEventListener('DOMContentLoaded', function () {
            document.addEventListener('click', async function (event) {
                if (event.target.classList.contains('add-to-cart-btn')) {
                    try {
                        // Find the closest form related to the clicked button
                        const form = event.target.closest('.addToCartForm');

                        // Get values from the form
                        {{!-- const userId = form.querySelector('[name="userId"]').value; --}}
                        const productId = form.querySelector('[name="productId"]').value;
                        const size = form.querySelector('[name="size"]').value;
                        const quantity = form.querySelector('[name="quantity"]').value;
                        const price = form.querySelector('[name="price"]').value;

                        // Log or send these values to your server as needed
                        {{!-- console.log('User ID:', userId); --}}
                        console.log('Product ID:', productId);
                        console.log('Size:', size);
                        console.log('Quantity:', quantity);
                        console.log('Price:', price);

                        // Send the data to the server using fetch
                        const response = await fetch('/add-to-cart', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                            },
                            body: JSON.stringify({
                                productId,
                                size,
                                quantity,
                                price,
                            }),
                        });

                        if (response.ok) {
                            console.log('Item added to cart successfully');
                        } else if (response.status === 400) {
                            console.error('Bad Request - Check your request payload');
                        } else {
                            console.error('Error adding item to cart:', response.statusText);
                        }
                    } catch (error) {
                        console.error('Error adding item to cart:', error.message);
                    }
                }
            });
        });
    </script>



</body>

</html>